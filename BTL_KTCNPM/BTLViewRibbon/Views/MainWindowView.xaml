<ribbon:RibbonWindow x:Class="BTLViewRibbon.Views.MainWindowView" 
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:my="clr-namespace:BTLViewRibbon.UserControls"
                     xmlns:ribbon="clr-namespace:Microsoft.Windows.Controls.Ribbon;assembly=RibbonControlsLibrary"
                     x:Name="RibbonWindow"
                     Title="{Binding Path=TitleMainWindow,
                                     Source={StaticResource Resources}}"
                     Width="1000"
                     Height="600"
                     Icon="../Images/icon.png"
                     WindowStartupLocation="CenterScreen"
                     WindowState="Maximized">

    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ribbon:Ribbon x:Name="Ribbon">
            <ribbon:Ribbon.ApplicationMenu>
                <ribbon:RibbonApplicationMenu SmallImageSource="../Images\SmallIcon.png">
                    <ribbon:RibbonApplicationMenuItem x:Name="MenuItem1" 
                                                      Header="Hello _Ribbon"
                                                      ImageSource="../Images\LargeIcon.png" />
                </ribbon:RibbonApplicationMenu>
            </ribbon:Ribbon.ApplicationMenu>

            <ribbon:RibbonTab Header="Home">
                <ribbon:RibbonGroup Header="Manager">
                    <ribbon:RibbonGroup.GroupSizeDefinitions>
                        <ribbon:RibbonGroupSizeDefinition>
                            <ribbon:RibbonControlSizeDefinition ImageSize="Large" IsLabelVisible="True" />
                            <ribbon:RibbonControlSizeDefinition ImageSize="Large" IsLabelVisible="True" />
                            <ribbon:RibbonControlSizeDefinition ImageSize="Large" IsLabelVisible="True" />
                            <ribbon:RibbonControlSizeDefinition ImageSize="Large" IsLabelVisible="True" />
                        </ribbon:RibbonGroupSizeDefinition>
                        <ribbon:RibbonGroupSizeDefinition IsCollapsed="True" />
                    </ribbon:RibbonGroup.GroupSizeDefinitions>
                    <ribbon:RibbonButton Label="Button1" LargeImageSource="../Images\LargeIcon.png" />
                    <ribbon:RibbonButton Label="Button2" LargeImageSource="../Images\LargeIcon.png" />
                    <ribbon:RibbonButton Label="Button3" LargeImageSource="../Images\LargeIcon.png" />
                    <ribbon:RibbonButton Label="Button4" LargeImageSource="../Images\LargeIcon.png" />
                </ribbon:RibbonGroup>

                <ribbon:RibbonGroup Header="Language">
                    <ribbon:RibbonGroup.GroupSizeDefinitions>
                        <ribbon:RibbonGroupSizeDefinition>
                            <ribbon:RibbonControlSizeDefinition ImageSize="Large" IsLabelVisible="True" />
                        </ribbon:RibbonGroupSizeDefinition>
                        <ribbon:RibbonGroupSizeDefinition IsCollapsed="True" />
                    </ribbon:RibbonGroup.GroupSizeDefinitions>

                    <ComboBox x:Name="cbLanguages" 
                              Width="150"
                              Height="28"
                              HorizontalContentAlignment="Left"
                              VerticalContentAlignment="Center"
                              Margin="0, 20, 0, 0"
                              ItemsSource="{Binding Path=SupportedCultures,
                                                    Mode=OneWay,
                                                    Source={StaticResource CultureResourcesDS}}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="{Binding NativeName}" />
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </ribbon:RibbonGroup>
            </ribbon:RibbonTab>
        </ribbon:Ribbon>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="270" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="200" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <GroupBox Margin="5, 10" Header="Parameters">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Height="20" 
                                   Margin="10,10,10,0"
                                   Text="KLOC:"
                                   TextWrapping="Wrap" />
                        <TextBox Height="26" 
                                 Margin="10,0,10,0"
                                 Text=""
                                 TextWrapping="Wrap"
                                 VerticalContentAlignment="Center" />

                        <TextBlock Height="20" 
                                   Margin="10,10,10,0"
                                   Text="Error/KLOC:"
                                   TextWrapping="Wrap" />
                        <TextBox Height="26" 
                                 Margin="10,0,10,0"
                                 Text=""
                                 TextWrapping="Wrap"
                                 VerticalContentAlignment="Center" />

                        <TextBlock Height="20" 
                                   Margin="10,10,10,0"
                                   Text="Number of errors:"
                                   TextWrapping="Wrap" />
                        <TextBox Height="26" 
                                 Margin="10,0,10,0"
                                 Text=""
                                 TextWrapping="Wrap"
                                 VerticalContentAlignment="Center" />

                        <TextBlock Height="20" 
                                   Margin="10,10,10,0"
                                   Text="Labor cost:"
                                   TextWrapping="Wrap" />
                        <TextBox Height="26" 
                                 Margin="10,0,10,0"
                                 Text=""
                                 TextWrapping="Wrap"
                                 VerticalContentAlignment="Center" />

                        <TextBlock Height="20" 
                                   Margin="10,10,10,0"
                                   Text="Distribution of defect types:"
                                   TextWrapping="Wrap" />

                        <TextBlock Height="20" 
                                   Margin="10,10,10,0"
                                   Text="Documents: (%)"
                                   TextWrapping="Wrap" />
                        <my:SliderTextBoxCustom Margin="10,0,10,0" />

                        <TextBlock Height="20" 
                                   Margin="10,10,10,0"
                                   Text="Logic: (%)"
                                   TextWrapping="Wrap" />
                        <my:SliderTextBoxCustom Margin="10,0,10,0" />
                        <TextBlock Height="20" 
                                   Margin="10,10,10,0"
                                   Text="Data: (%)"
                                   TextWrapping="Wrap" />
                        <my:SliderTextBoxCustom Margin="10,0,10,0" />
                        <TextBlock Height="20" 
                                   Margin="10,10,10,0"
                                   Text="Syntax: (%)"
                                   TextWrapping="Wrap" />
                        <my:SliderTextBoxCustom Margin="10,0,10,0" />

                        <TextBlock Height="20" 
                                   Margin="10,10,10,0"
                                   Text="Comp/Mem: (%)"
                                   TextWrapping="Wrap" />
                        <my:SliderTextBoxCustom Margin="10,0,10,0" />
                    </StackPanel>
                </GroupBox>
            </Grid>

            <Grid Grid.Column="1">
                <GroupBox Margin="5, 10" Header="Error Types And Techniques">
                    <DataGrid Margin="5" 
                              AutoGenerateColumns="False"
                              IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Width="80" Header="Error" />
                            <DataGridTextColumn Width="100" Header="Unit Test" />
                            <DataGridTextColumn Width="120" Header="Functional Test" />
                            <DataGridTextColumn Width="100" Header="Integrate Test" />
                            <DataGridTextColumn Width=" *" Header="Overall Test" />
                        </DataGrid.Columns>
                    </DataGrid>
                </GroupBox>
            </Grid>

            <Grid Grid.Column="2" Margin="5,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" MinHeight="200" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <GroupBox Header="Plan">
                        <DataGrid Margin="5" AutoGenerateColumns="False">
                            <DataGrid.Columns>
                                <DataGridTextColumn Width="*" Header="Technique" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>

                </Grid>
                <Grid Grid.Row="1">
                    <GroupBox Header="Result">
                        <Grid>
                            <StackPanel>
                                <TextBlock Height="20" 
                                           Margin="10,10,10,0"
                                           Text="Direct cost:"
                                           TextWrapping="Wrap" />
                                <TextBox Height="26" 
                                         Margin="10,0,10,0"
                                         Text=""
                                         TextWrapping="Wrap"
                                         VerticalContentAlignment="Center" />

                                <TextBlock Height="20" 
                                           Margin="10,10,10,0"
                                           Text="Future cost:"
                                           TextWrapping="Wrap" />
                                <TextBox Height="26" 
                                         Margin="10,0,10,0"
                                         Text=""
                                         TextWrapping="Wrap"
                                         VerticalContentAlignment="Center" />

                                <TextBlock Height="20" 
                                           Margin="10,10,10,0"
                                           Text="Revenue:"
                                           TextWrapping="Wrap" />
                                <TextBox Height="26" 
                                         Margin="10,0,10,0"
                                         Text=""
                                         TextWrapping="Wrap"
                                         VerticalContentAlignment="Center" />

                                <TextBlock Height="20" 
                                           Margin="10,10,10,0"
                                           Text="Total cost:"
                                           TextWrapping="Wrap" />
                                <TextBox Height="26" 
                                         Margin="10,0,10,0"
                                         Text=""
                                         TextWrapping="Wrap"
                                         VerticalContentAlignment="Center" />

                                <TextBlock Height="20" 
                                           Margin="10,10,10,0"
                                           Text="Profit:"
                                           TextWrapping="Wrap" />
                                <TextBox Height="26" 
                                         Margin="10,0,10,0"
                                         Text=""
                                         TextWrapping="Wrap"
                                         VerticalContentAlignment="Center" />

                                <TextBlock Height="20" 
                                           Margin="10,10,10,0"
                                           Text="ROI:"
                                           TextWrapping="Wrap" />
                                <TextBox Height="26" 
                                         Margin="10,0,10,0"
                                         Text=""
                                         TextWrapping="Wrap"
                                         VerticalContentAlignment="Center" />
                            </StackPanel>
                        </Grid>
                    </GroupBox>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</ribbon:RibbonWindow>
